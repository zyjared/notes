    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
